{
  "name": "tdv",
  "version": "0.2.4",
  "description": "Typescript (definition|decorator) validator base on Joi",
  "repository": "https://github.com/vitarn/tdv",
  "author": "colder",
  "license": "MIT",
  "scripts": {
    "pretest": "tsc -p tsconfig.prod.json --noEmit",
    "test": "jest --coverage --maxWorkers=4",
    "testing": "jest --watch",
    "release": "standard-version",
    "prepack": "tsc -p tsconfig.prod.json"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/joi": "^13.0.7",
    "@types/node": "^9.6.1",
    "jest": "^22.4.3",
    "joi": "12",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "peerDependencies": {
    "joi": "*"
  },
  "files": [
    "**/**.js",
    "**/*.d.ts",
    "!coverage",
    "!test"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.(test)\\.(t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "joi"
    ]
  }
}
