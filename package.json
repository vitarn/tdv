{
  "name": "tdv",
  "version": "0.3.1",
  "description": "Typescript (definition|decorator) validator base on Joi",
  "repository": "https://github.com/vitarn/tdv",
  "author": "colder",
  "license": "MIT",
  "main": "lib",
  "module": "es",
  "types": "lib",
  "scripts": {
    "pretest": "tsc -p tsconfig.prod.json --noEmit",
    "test": "jest --coverage --maxWorkers=4",
    "testing": "jest --watch",
    "release": "standard-version",
    "prepack": "rimraf lib && tsc -p tsconfig.prod.json -d && rimraf es && tsc -p tsconfig.prod.json -m es2015 --outDir es || echo"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/joi": "^13.0.7",
    "@types/node": "^10.0.3",
    "jest": "^22.4.3",
    "joi": "12",
    "rimraf": "^2.6.2",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "peerDependencies": {
    "joi": "*"
  },
  "files": [
    "lib",
    "es"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.(test)\\.(t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "joi"
    ]
  }
}
